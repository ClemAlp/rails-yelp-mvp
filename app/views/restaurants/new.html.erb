<div class="container">

  <h1>Add a restaurant</h1>

  <div class="col-6 offset-3">

  <%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
  <% end %>

  </div>
</div>

